{
    "name": "@svylabs/flocc-ext",
    "version": "0.1.0",
    "description": "An agent based simulation / testing library built around the flocc library",
    "main": "dist/src/index.js",
    "type": "module",
    "types": "dist/src/index.d.ts",
    "files": [
        "dist",
        "bin"
    ],
    "exports": {
        "import": "./dist/src/index.js",
        "require": "./dist/src/index.js",
        "types": "./dist/src/index.d.ts"
    },
    "bin": {
        "scaffold": "./bin/scaffold.cjs" 
    },
    "scripts": {
        "build": "tsc && tsc ./bin/scaffold.ts --module CommonJS --outDir ./bin && mv ./bin/scaffold.js ./bin/scaffold.cjs && chmod +x ./bin/scaffold.cjs",
        "test": "jest --config jest.config.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/svylabs/flocc-ext.git"
    },
    "keywords": [],
    "author": "Sridhar<sg@svylabs.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/svylabs/flocc-ext/issues"
    },
    "homepage": "https://github.com/svylabs/flocc-ext#readme",
    "dependencies": {
        "flocc": "^0.5.21",
        "typescript": "^5.7.3"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.14",
        "commander": "^13.1.0",
        "fs-extra": "^11.3.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2"
    }
}
